<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_fragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:background="@drawable/card"
        android:stretchColumns="*">

        <TableRow android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/item"
                android:layout_column="0"
                android:layout_span="5"
                android:paddingLeft="16dp"
                android:text="Food"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:paddingTop="12dp">

            <TextView
                android:id="@+id/dday"
                android:layout_column="4"
                android:layout_span="5"
                android:text="D-day"
                android:textColor="@color/white"
                android:paddingEnd="12dp"
                android:textSize="54sp"
                android:gravity="right"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:paddingTop="8dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/date"
                android:layout_column="3"
                android:layout_span="6"
                android:gravity="right"
                android:paddingEnd="12dp"
                android:text="20xx.xx.xx"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/table"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/recipeBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/white"
            android:text="Recipe for youtube"
            android:drawableRight="@drawable/youtube"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:gravity="center"
            android:textColor="@color/gray" />

        <ImageView
            android:layout_width="1dp"
            android:paddingTop="2dp"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/darker_gray" />

        <Button
            android:id="@+id/eatBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Eat!"
            android:textColor="@color/gray" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageChar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        />

</RelativeLayout>
