<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.namjongbin.fridge_angel">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_beta"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_beta_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecognizerFragment"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" />
        <activity android:name=".ListActivity" />
        <activity
            android:name=".CalendarViewer"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" />

        <receiver android:name=".Alarmer" />

        <activity android:name=".AddActivity"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" ></activity>
    </application>

</manifest>